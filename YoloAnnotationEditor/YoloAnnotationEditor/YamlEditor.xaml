<UserControl x:Class="YoloAnnotationEditor.YamlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoloAnnotationEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main content area where the YamlEditorControl will be added -->
        <Grid x:Name="MainContent" Grid.Row="0">
            <!-- YamlEditorControl will be added here programmatically -->
        </Grid>

        <!-- Status bar (optional) -->
        <StatusBar Grid.Row="1">
            <TextBlock x:Name="StatusText" Text="Ready" />
        </StatusBar>
    </Grid>
</UserControl>
