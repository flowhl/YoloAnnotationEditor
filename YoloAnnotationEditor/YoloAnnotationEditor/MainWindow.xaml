<Window x:Class="YoloAnnotationEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoloAnnotationEditor"
        mc:Ignorable="d"
        Title="Dataset Editor" Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- YOLO Main Tab -->
            <TabItem Header="YOLO">
                <TabControl>
                    <TabItem Header="Dataset">
                        <local:DatasetEditor/>
                    </TabItem>
                    <TabItem Header="YamlFile">
                        <local:YamlEditor/>
                    </TabItem>
                    <TabItem Header="Preview">
                        <local:YoloPreview/>
                    </TabItem>
                    <TabItem Header="Dataset Tools">
                        <local:YoloDatasetToolsControl/>
                    </TabItem>
                </TabControl>
            </TabItem>
            
            <!-- PaddleOCR Main Tab -->
            <TabItem Header="PaddleOCR">
                <TabControl>
                    <TabItem Header="OCR Runner">
                        <local:PaddleOcrRunner/>
                    </TabItem>
                    <TabItem Header="Annotation">
                        <local:OCRAnnotationControl/>
                    </TabItem>
                    <TabItem Header="Dataset Tools">
                        <local:DatasetToolsControl/>
                    </TabItem>
                </TabControl>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
