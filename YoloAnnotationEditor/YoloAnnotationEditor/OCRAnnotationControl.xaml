<UserControl x:Class="YoloAnnotationEditor.OCRAnnotationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YoloAnnotationEditor" xmlns:zoomControl="clr-namespace:Denxorz.ZoomControl;assembly=Denxorz.ZoomControl"
             Name="OCRAnnotationUserControl">

    <UserControl.Resources>
        <local:BooleanConverter x:Key="BooleanConverter"/>
        <local:HasLabelToBrushConverter x:Key="HasLabelToBrushConverter"/>
        <local:HasLabelToSymbolConverter x:Key="HasLabelToSymbolConverter"/>
        <local:HasLabelToTooltipConverter x:Key="HasLabelToTooltipConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Name="OpenFolderButton" Content="Open Folder" Click="OpenFolderButton_Click" 
                    Padding="10,5" Margin="0,0,10,0"/>
            <TextBlock Name="FolderPathText" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBlock Name="ImageCountText" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Image List -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Images" FontWeight="Bold" Margin="10,5"/>

                <ListBox Grid.Row="1" Name="ImageListBox" Margin="10"
                         ItemsSource="{Binding Annotations}"
                         SelectedItem="{Binding SelectedAnnotation}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="20"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" Width="50" Height="50" 
                                       Source="{Binding FullPath}" Stretch="UniformToFill"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Margin="5,0">
                                    <TextBlock Text="{Binding Filename}" FontWeight="Bold" FontSize="12"/>
                                    <TextBlock Text="{Binding Text}" FontSize="10" Foreground="Gray" 
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- Label Status Indicator -->
                                <Border Grid.Column="2" Width="16" Height="16" 
                                        CornerRadius="8" HorizontalAlignment="Center" VerticalAlignment="Center"
                                        Background="{Binding HasLabel, Converter={StaticResource HasLabelToBrushConverter}}"
                                        ToolTip="{Binding HasLabel, Converter={StaticResource HasLabelToTooltipConverter}}">
                                    <TextBlock Text="{Binding HasLabel, Converter={StaticResource HasLabelToSymbolConverter}}" 
                                               FontSize="10" FontWeight="Bold" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="LightGray"/>

            <!-- Image Preview and Annotation -->
            <Grid Grid.Column="2" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <!-- Image Preview -->
                <zoomControl:ZoomControl Grid.Row="0" Name="ImageZoomControl">
                    <Image Name="PreviewImage" Source="{Binding SelectedAnnotation.FullPath}"
                           Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </zoomControl:ZoomControl>

                <!-- Controls -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
                    <Button Name="DetectOCRButton" Content="Detect with OCR" Click="DetectOCRButton_Click"
                            Padding="10,5" Margin="0,0,10,0" IsEnabled="{Binding SelectedAnnotation, Converter={StaticResource BooleanConverter}}"/>
                    <Button Name="PreviousButton" Content="Previous" Click="PreviousButton_Click"
                            Padding="10,5" Margin="0,0,10,0"/>
                    <Button Name="NextButton" Content="Next" Click="NextButton_Click"
                            Padding="10,5" Margin="0,0,10,0"/>
                    <TextBlock VerticalAlignment="Center" Margin="20,0,0,0">
                        <Run Text="{Binding Annotations.Count, StringFormat='Total: {0}', Mode=OneWay}"/>
                        <Run Text=" | "/>
                        <Run Name="CurrentIndexText"/>
                        <Run Text=" | "/>
                        <Run Name="LabeledCountText"/>
                    </TextBlock>
                </StackPanel>

                <!-- Text Annotation -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Annotation Text:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Name="AnnotationTextBox" 
                             Text="{Binding SelectedAnnotation.Text, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" FontSize="12"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>